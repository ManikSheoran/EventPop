<% layout('layouts/boilerplate') %>

<div class="container">
    <h1 class="text-center mt-5">All Events</h1>
    <a class="btn btn-success mb-3" href="/events/new">Add New Event</a>

    <% for(let event of events){ %>
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                <img crossorigin="anonymous" src="<%= event.image.url %>" alt="<%= event.title %>" class="img-fluid">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title"><%= event.title %></h2>
                    <p class="card-text">Location: <%= event.location %></p>
                    <a href="/events/<%= event._id %>" class="btn btn-success">Details</a>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>